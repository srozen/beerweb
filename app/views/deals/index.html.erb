<div class="container">
	<div class="card-panel blue">Bons Plans</div>
	<div class="row">	
	
	<% # Résultat de la recherche #index %>
	<% @deals = Deal.all %>
    <% if @deals.blank? %>
      <%= "Aucun bon plan n'est disponnible!" %>
    <% else %>
		<% @deals.each do |deal| %>
				<div class="col s12 m4">
						<div class="card">
							<div class="card-image waves-effect waves-block waves-light">
							<img class="activator" src="images/p<%= deal.id=%>.jpg">
						</div>
						<div class="card-content">
							<span class="card-title activator grey-text text-darken-4"><%= deal.name %><i class="material-icons right">more_vert</i></span>
							<p><a href="#">Lien vers le profil de la bière</a></p>
						</div>
						<div class="card-reveal">
							<span class="card-title grey-text text-darken-4"><%= deal.nameBeer %><i class="material-icons right">close</i></span>
							<p><%= deal.description %></p>
							<p>Prix :<%= deal.prix %> </br>  Remise : <%= deal.reduction %></p>
							<p>Date de debut : <%= deal.datedebut %></br> Date de fin de promo : <%= deal.datefin %></p>
							<div class="card-action">
								<a href="#">Lien vers ...</a>
							</div>
						</div>
					</div>
				</div>
		<% end %>
	<% end %>
	</div>
</div>


