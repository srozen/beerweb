<div id="new_beer-page" class="container">
  <div class="col s12 ">
    <h3><span class="span_h3 brown-text"><%=@title%></span></h3>
    <%= form_for(@beer) do |f| %>
    <form class="login-form">
      <div class="row">
        <div class="input-field col s12 center">
        </div>
      </div>
       <div class="row margin">
        <div class="input-field col s12">
            <%= f.label :name, "Nom" %><br />
            <%= f.text_field :name %>
        </div>
      </div>
       <div class="row margin">
        <div class="input-field col s12">
          <%= f.label :degree, "Degré d'alcool" %>
          <%= f.number_field :degree , :step => 0.1, :value => 5 %><br />
        </div>
       </div>
       <div class="row margin">
        <div class="input-field col s12">
          <%= f.label :description, "Description" %>
          <%= f.text_area :description , :class => "materialize-textarea" %>
        </div>
       </div>
       <div class="row margin">
        <div class="input-field col s12">
          <%= f.label :story, "Histoire" %>
          <%= f.text_area :story , :class => "materialize-textarea" %>
        </div>
       </div>

       <div class="row margin">
        <div class="input-field col s12">
          <%= f.label :beer_category_id, "Catégorie" %><br><br>
          <%= f.select :beer_category_id,BeerCategory.all.collect { |cat| [cat.name, cat.id]}, {}, prompt: 'Choisir une catégorie' , :class => 'browser-default'%>
        </div>
       </div>

       <div class="row">
         <div class="input-field col s12">
           <%= f.label :picture, "Image représentant la bière" %><br><br>  
           <%= f.file_field :picture %>
         </div>
      </div>  

      <div class="row">
        <div class="col s12 m5 l4"><p></p></div>
           <%= f.submit "Ajouter" , :class => "btn col s6 m3 l4 waves-light orange"%>
        <div class="col s12 m5 l4"><p></p></div>
      </div>
    </form>
      <% end %>
  </div>
</div>
