<!DOCTYPE html>
<html>
<head>
    <title>Beer Collection</title>
	<%= csrf_meta_tag %>

    <%= render 'layouts/stylesheets' %>

</head>
<body>
   <div class="page_flex">
      <%= render 'layouts/header' %>

        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>

        <div class="main_flex">
        <%= yield %>
        </div>

      <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.test? %>
   </div>
</body>
</html>
