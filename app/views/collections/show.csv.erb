<%- headers = ["Nom;" "Degree;" "Description;" "Histoire;" "Categorie"] -%>
<%= CSV.generate_line(headers).html_safe.force_encoding('utf-8') %>
<%- @collection_beers.each do |beer| -%>
  <%- row = ["#{beer.name}; #{beer.degree}; #{beer.description}; #{beer.story}; #{beer.beer_category.name}"] -%>
  <%= CSV.generate_line(row).html_safe.force_encoding('utf-8') %>
<% end %>
