<% if signed_in? && current_user.admin? %>
<div class="container">
<h3><span class="span_h3 brown-text"><%=@title%></span></h3>
<div class="row">
  <table>
    <thead>
      <tr>
          <th data-field="name">Login</th>
          <th data-field="degree">Email</th>
      </tr>
    </thead>

    <tbody>
        <% @users.each do |user| %>
          <tr>
            <% if !user.admin? %>
              <td><%= link_to user.login, user , :class => "brown-text text-brown"%></td>
              <td><%= user.email %></td>
              <td><%= link_to "Editer",  edit_user_path(user), :class => "brown-text text-brown" %></td>
              <td><%= button_to "Supprimer", user, :method => :delete, :onclick => "return confirm('Etes-vous sÃ»r de vouloir supprimer #{user.login} ?')", :class => "brown"%></td>
            <% end %>
          </tr>
          </tr>
        <% end %>
    </tbody>
  </table>
</div>
<% else %>
<p>Vous n'avez pas les droits pour consulter cette page !</p>
<% end %>
