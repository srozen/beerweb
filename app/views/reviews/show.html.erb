<div class = "container">
  <span>Avis des collectionneurs ! </span>
  <% @reviews.where(beer_id: @beer.id).each do |review| %>
    <% @collections.where(id: review.collection_id).each do |collection| %>
      <% @users.where(id: collection.user_id).each do |user| %>
        <div class="col s12 m4 l4">
          <ul class = "collapsible active">
            <li >
              <div class="collapsible-header active"><i class="mdi-av-web a"></i><%= user.login %></div>
              <div class="collapsible-body active"><p> <td><%= review.comment %></td></p></div>
            </li>
         </ul>
        </div>
      <% end %>
     <% end %>
   <% end %>
</div>
<script src="../min/plugin-min.js"></script>
<script src="../min/custom-min.js"></script>
