<div id="login-page" class="container row-login">
    <h3><span class="span_h3 brown-text"><%=@title%></span></h3>
    <div class="col s12 ">
       <%= form_for(:session, :url => sessions_path) do |f| %>
      <form class="login-form">
        <div class="row">

          <div class="input-field col s12 center">

          </div>
        </div>
        <div class="row margin">
          <div class="input-field col s12">
            <i class="mdi-social-person-outline prefix"></i>
            <%= f.label :login, "Login" %><br />
        <%= f.text_field :login %>
          </div>
        </div>
        <div class="row margin">
          <div class="input-field col s12">
            <i class="mdi-action-lock-outline prefix"></i>
            <%= f.label :pwd, "Mot de passe" %><br />
        <%= f.password_field :pwd %>
          </div>
        </div>
        <div class="row">
             <div class="col s12 m5 l4"><p></p></div>
             <%= f.submit "Se connecter" , :class => "btn col s6 m3 l4 waves-light orange"  %>
             <div class="col s12 m5 l4"><p></p></div>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s6 m6 l6">

            <p class="margin medium-small">Pas encore inscrit ? <%= link_to "Inscrivez vous !", signup_path  %></p>
          </div>
          <div class="input-field col s6 m6 l6">

              <p class="margin right-align medium-small"><%= link_to "Mot de passe oubliÃ© ?", new_password_reset_path %></p>
          </div>
        </div>

      </form>
        <% end %>
</div>
